}
.texts{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  margin-left: 20rpx;
  height: 7vh;
  flex-direction: row;
  align-items:center;
  margin: 20rpx;
  border: 5rpx solid white;
  border-radius: 25rpx;
  /* background-color: rgb(253,234,165); */
  background-color: #288af5;
  flex-flow:row;
  font-size: 38rpx;
  color: #fff;
  font-family: STSong;
}
.texts view{
  width:50%;
  display:inline-block;
}
.left{
  text-align:left;
  padding-left:30rpx;
}
.right{
  text-align:right;
  padding-right:30rpx;
  }
.top{
  text-align: center;
  width: 100%;
  /* background-color:rgb(253,234,165); */
  background-color: #288af5;
  color: #fff;
  height: 70rpx;
}
.top_{
  width:25%;
  height: 100%;
  /* background-color:  rgb(253,234,165); */
  background-color: #288af5;
  color: #fff;
}
.list{
  text-align: center;
  /* border-left: 10rpx solid rgb(253,234,165); */
  background-color: #288af5;
  color: #fff;
  margin-bottom: 15rpx;
  margin-top: 10rpx;
}
.item{
  position: relative;
}
.wrap{
  position: absolute;
  z-index: 2;
  top: 0;
  left: 0;
  background-color: #fff;
  width: 100%;
  height: 100%;
}
.delete{
  position: absolute;
  z-index: 1;
  top: 0;
  right: 0;
  width: 120rpx;
  height: 100%;
}
.btn{
  width: 85%;
  margin-top: 50rpx;
  font-weight: bold;
  text-align: center;
  font-size: 35rpx;
  height:94rpx;
  background-color: #288af5;
  border-radius: 60rpx;
  color: #fff;
}
