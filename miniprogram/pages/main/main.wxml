<!-- 包括预算类型、预算名称以及预算切换button -->
<view class="top_items">
  <!-- 上一个预算 -->
  <button bindtap="sideBudget" id="previous" class="shift_btn">
    <image src="/images/shangyiyeqianyiye.png" class="btn_img"></image>
  </button>
  <view class="name_and_type bold">
    <view>预算名称:{{data[currentDataName].name}}</view>
    <view>预算类型:{{dataType[data[currentDataName].dataType]}}</view>
  </view>
  <!-- 下一个预算 -->
  <button bindtap="sideBudget" id="next" class="shift_btn_right">
    <image src="/images/xiayiyehouyiye.png" class="btn_img"></image>
  </button>
</view>

<!-- 包括币种、今日剩余 -->
<view class="bold">
<image src="/images/banner.jpg" class="banner"></image>
  
    <view class="bud_remain">
      <view class="">今日剩余预算:</view>
      <view class="num">
        <text>{{currencyType[data[currentDataName].currency]}}</text>
        <view class="texts">{{data[currentDataName].todayleft}}</view>
      </view>
     
      <!-- <text>预算余额:{{data[currentDataName].balance}}</text> -->
    </view>
</view>


<view class="mid_items">
<!-- <image src="/images/.png" class="btn_img_"></image> -->
  <button bindtap="navigate" id="myBudgets" class="mid_btn_l">预算明细</button>
  <image src="/images/center(none).png" class="btn_img_"></image>
   <view class="mid_btn_c">剩余天数:{{data[currentDataName].remaindays}}</view>
  <button bindtap="navigate" id="transaction" class="mid_btn_r">转账</button>
</view>
 

<view class="in_and_out">
<!-- <image src="/images/income.png" class="back-left"></image> -->
  <button bindtap="navigate" id="income" class="" plain="true">收入</button>
<!-- <image src="/images/income.png" class="back-right"></image> -->
  <button bindtap="navigate" id="expenditure" class="" plain="true">支出</button>
</view>

<view class="history">
  <text>交易历史</text>
  <button bindtap="navigate" id="history" class="btn_history">更多</button>
</view>
