<image src="../../images/3.jpg" style="position: fixed; z-index: -999; width: 100%; height: 100%;"></image>
<!-- 包括预算名称、预算余额、币种、今日剩余 -->
 <view class="top_items">
  <view class="bud_name">预算名称:{{data[currentDataName].name}}
 </view>
  <view class="bud_remain">
    <view>预算币种:{{currencyType[data[currentDataName].currency]}}</view>
    <view>预算余额:{{data[currentDataName].balance}}</view>
 </view>
  
  <view class="today_remain">今日剩余:{{data[currentDataName].todayleft}}</view>
</view>
<!-- 包括预算类型、以及预算切换button -->
<view class="mid_items">
  <!-- 上一个预算 -->
  <button open-type="share" bindtap="sideBudget" id="previous" class="shift_btn" plain="ture">
  <image src="/images/shangyiyeqianyiye.png" class="btn_img" plain="ture"></image>
  </button>
  <view>预算类型:{{dataType[data[currentDataName].dataType]}}</view>
  <!-- 下一个预算 -->
  <button bindtap="sideBudget" id="next" class="shift_btn" plain="ture" >
    <image src="/images/xiayiyehouyiye.png" class="btn_img" plain="ture" ></image>
  </button> 
</view>
 
 <view class="circle">
   <view class="remain_day">剩余天数:{{data[currentDataName].remaindays}}</view>
 </view>
  
  <view class="in_and_out">
    <button bindtap="navigate" id="income" class="btn_inandout" plain="ture">收入</button>
    <button bindtap="navigate" id="expenditure" class="btn_inandout" plain="ture">支出</button>
  </view>



<button bindtap="navigate" id="myBudgets" plain="ture" class="btn_planandhistory">我的预算</button>
<button bindtap="navigate" id="transaction" plain="ture" class="btn_planandhistory">转账</button>
<button bindtap="navigate" id="history" plain="ture" class="btn_planandhistory">历史 {{data[currentDataName].name}}</button>